<%= form_with(model: movie, local: true) do |form_builder| %>

  <%= render "shared/errors", object: movie %>

  <%= form_builder.label :title %>
  <%= form_builder.text_field :title, autofocus: true %>

  <%= form_builder.label :description %>
  <%= form_builder.text_area :description, rows: 10 %>

  <%= form_builder.label :rating %>
  <%= form_builder.select :rating, Movie::RATINGS, prompt: "Pick one" %>

  <%= form_builder.label :released_on %>
  <%= form_builder.date_field :released_on %>

  <%= form_builder.label :total_gross %>
  <%= form_builder.number_field :total_gross %>

  <%= form_builder.label :director %>
  <%= form_builder.text_field :director %>

  <%= form_builder.label :duration %>
  <%= form_builder.text_field :duration %>

  <%= form_builder.label :image_file_name %>
  <%= form_builder.text_field :image_file_name %>

  <div class="checkboxes">
    <%= form_builder.label :genres %>
    <%= form_builder.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %>
  </div>

  <%= form_builder.submit %>
<% end %>